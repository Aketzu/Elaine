<h1>Listing program_categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Default do vod</th>
    <th>Default hidden</th>
  </tr>

<% for program_category in @program_categories %>
  <tr>
    <td><%=h program_category.name %></td>
    <td><%=h program_category.description %></td>
    <td><%=h program_category.default_do_vod %></td>
    <td><%=h program_category.default_hidden %></td>
    <td><%= link_to 'Show', program_category %></td>
    <td><%= link_to 'Edit', edit_program_category_path(program_category) %></td>
    <td><%= link_to 'Destroy', program_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

