<h1>New program_category</h1>

<% form_for(@program_category) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :default_do_vod %><br />
    <%= f.check_box :default_do_vod %>
  </p>
  <p>
    <%= f.label :default_hidden %><br />
    <%= f.check_box :default_hidden %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', program_categories_path %>
