<% form_tag do -%>
<%= button_to "Send emails", {}, :confirm => 'Are you sure?' %>
<a href="#" onClick="javascript:$$('input').each(function(node){ node.checked = !node.checked; });">Invert selection</a>

<table>
<% @users.each_with_index {|user, index| %>
	<% @current_cycle = cycle('playlist_even', 'playlist_odd') %>
	<tr>
	<td>
	<input name="sendlink[]" type="checkbox" value="<%=user.id%>" /></td>
	<td><%= user.email %></td>
	</tr>
<% } %>
</table>

<%= button_to "Send emails", {}, :confirm => 'Are you sure?' %>
<% end -%>
