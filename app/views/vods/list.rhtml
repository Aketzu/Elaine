<h1>Listing vods</h1>
<p>
Page: <%= pagination_links(@vod_pages) %>
</p>

<table>
  <tr>
    <th>Program</th>
    <th>Full filename</th>
    <th>Length</th>
    <th>Filesize</th>
    <th>Completed</th>
    <th>Video format</th>
    <th>File location</th>
    <th>Updated at</th>
    <th>Actions</th>
  </tr>
  
<% for vod in @vods %>
  <tr>
    <td><%= link_to vod.Program.title, :action => 'edit', :controller => 'programs', :id => vod.Program.id %>
    <td><%= vod.full_filename %></td>
    <td><%= vod.length %></td>
    <td><%= vod.filesize %></td>
    <td><%= vod.completed %></td>
    <td><%= vod.VideoFormat.name %></td>
    <td><%= vod.FileLocation.name %></td>
    <td><%= vod.updated_at.strftime "%a %d.%m.%y %H:%M:%S" %></td>
    <td>[<%= link_to 'Show', :action => 'show', :id => vod %>, 
        <%= link_to 'Edit', :action => 'edit', :id => vod %>, 
        <%= link_to 'Destroy', { :action => 'destroy', :id => vod }, :confirm => 'Are you sure you want to destroy the item?', :method => :post %>]</td>
  </tr>
<% end %>
</table>
<p>
Page: <%= pagination_links(@vod_pages) %>
</p>

<%= link_to 'New vod', :action => 'new' %>
