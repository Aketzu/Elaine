<h1>New vod</h1>

<% form_for(@vod) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :filename %><br />
    <%= f.text_field :filename %>
  </p>
  <p>
    <%= f.label :program_id %><br />
    <%= f.text_field :program_id %>
  </p>
  <p>
    <%= f.label :vod_format_id %><br />
    <%= f.text_field :vod_format_id %>
  </p>
  <p>
    <%= f.label :filesize %><br />
    <%= f.text_field :filesize %>
  </p>
  <p>
    <%= f.label :length %><br />
    <%= f.text_field :length %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', vods_path %>
