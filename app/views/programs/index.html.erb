<h1>Listing programs</h1>

<table>
  <tr>
		<th>Title</th>
    <th>Category</th>
    <th>Status</th>
    <th>Type</th>
    <th>Notes</th>
    <th>Quarantine</th>
    <th>Filename</th>
    <th>File exists</th>
    <th>File status updated</th>
    <th>File aspect</th>
    <th>File resx</th>
    <th>File resy</th>
    <th>File length</th>
    <th>Target length</th>
    <th>Pms</th>
    <th>Preview image offset</th>
    <th>Do vod</th>
    <th>Hidden</th>
  </tr>

<% for program in @programs %>
  <tr>
    <td><%=h program.program_descriptions[0].title %></td>
    <td><%=h program.program_category.name if program.program_category_id != 0%></td>
    <td><%=h program.status %></td>
    <td><%=h program.programtype %></td>
    <td><%=h program.notes %></td>
    <td><%=h program.quarantine %></td>
    <td><%=h program.filename %></td>
    <td><%=h program.file_exists %></td>
    <td><%=h program.file_status_updated %></td>
    <td><%=h program.file_aspect %></td>
    <td><%=h program.file_resx %></td>
    <td><%=h program.file_resy %></td>
    <td><%=h program.file_length %></td>
    <td><%=h program.target_length %></td>
    <td><%=h program.pms_id %></td>
    <td><%=h program.preview_image_offset %></td>
    <td><%=h program.do_vod %></td>
    <td><%=h program.hidden %></td>
    <td><%= link_to 'Show', program %></td>
    <td><%= link_to 'Edit', edit_program_path(program) %></td>
    <td><%= link_to 'Destroy', program, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

