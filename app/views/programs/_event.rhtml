<% index = 0 %>
<% offset = 0 %>
<% for program_event in event %>
<div class="events_in_program_list">
  <div class="actions">
  [
  <%= link_to 'up', :action => 'move_event_up',
                    :id => @curprog.id,
                    :program_event_id => program_event.id%>
  <%= link_to 'down', :action => 'move_event_down',
                      :id => @curprog.id,
                      :program_event_id => program_event.id %>
  <%= link_to 'remove', {:controller => 'program_event_links',
                         :action => 'destroy',
                         :event_id => program_event.id,
											 	 :program_id => @curprog.id},
                         :confirm => 'Are you sure you want to destroy the item?',
                         :method => :post %>
  ]
  </div>
  <div><b><%= index += 1 %>.</b>
  <%= format_length(offset) %>

  <% offset += program_event.length %>
  <%= format_length(offset) %>

  <%= link_to program_event.title,
        :controller => 'events',
        :action => 'show',
        :id => program_event.id %>
  </div>
</div>
<% end %>
