<html>
<head>
  <title>Elaine 2006: <%= controller.action_name %> <%= controller.controller_name %></title>
  <%= stylesheet_link_tag 'elaine' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'formating' %>
  <%= if @timeline then '<script src="/javascripts/timeline-api/timeline-api.js" type="text/javascript"></script>' end %>
  <%= if @timeline then '<script src="timeline_config" type="text/javascript"></script>' end %>
</head>
<%= if @timeline then '<body onload="onLoad();" onresize="onResize();">' else '<body>' end %>

<table class="header_links">
  <tr>
    <th width="100px"><h1>Elaine2</h1></th>
    <td width="*"></td>
    <th width="100px"><%= link_to 'Playlists', :controller => 'playlists', :action => 'index' %></th>
    <th width="100px"><%= link_to 'Timeline', :controller => 'playlists', :action => 'timeline' %></th>
    <th width="100px"><%= link_to 'Programs', :controller => 'programs', :action => 'index' %></th>
    <th width="100px"><%= link_to 'Tapes',    :controller => 'tapes',    :action => 'index' %></th>
    <th width="100px"><%= link_to 'Events',   :controller => 'events',   :action => 'index' %></th>
    <th width="100px"><%= link_to 'Admin',   :controller => 'admin',   :action => 'index' %></th>
    <td width="*"></td>
  </tr>
</table>

<div class="flash"><%= flash[:notice] %></div>

<div class="content">
<%= @content_for_layout %>
</div>

</body>
</html>
