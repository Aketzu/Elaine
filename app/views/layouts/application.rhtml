<html>
<head>
  <title>Elaine 2006: <%= controller.action_name %> <%= controller.controller_name %></title>
  <%= stylesheet_link_tag 'elaine' %>
  <%= engine_stylesheet 'login_engine' %>
  <%= engine_stylesheet "user" %>
  <%= engine_javascript "user" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'formating' %>
  <%= if @timeline then '<script src="/javascripts/timeline-api/timeline-api.js" type="text/javascript"></script>' end %>
  <%= if @timeline then '<script src="timeline_config" type="text/javascript"></script>' end %>
</head>
<%= if @timeline then '<body onload="onLoad();" onresize="onResize();">' else '<body>' end %>

<%= render_sidebars %>

<div class="flash"><%= flash[:notice] %></div>
<div class="flash"><%= flash[:warning] %></div>
<div class="flash"><%= flash[:message] %></div>

<div class="content">
<%= @content_for_layout %>
</div>

</body>
</html>
