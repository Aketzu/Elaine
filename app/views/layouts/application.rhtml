<html>
<head>
  <title>Elaine 2006: <%= controller.action_name %> <%= controller.controller_name %></title>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'formating' %>

  <%= stylesheet_link_tag 'elaine' %>

  <%= engine_stylesheet 'login_engine' %>
  <%= engine_stylesheet "user" %>
  <%= engine_stylesheet "menu_engine" %>

  <%= engine_javascript "user" %>
  <%= engine_javascript "menu_engine" %>
  <%= if @timeline then '<script src="/javascripts/timeline-api/timeline-api.js" type="text/javascript"></script>' end %>
  <%= if @timeline then '<script src="timeline_config" type="text/javascript"></script>' end %>
</head>
<% if @timeline %>
<body onload="onLoad(<%=@channel_id.to_s%>);" onresize="onResize();">
<% else %>
<body>
<% end %>

<div id="container-page">
  <%= render_sidebars %>
  
  <div class="flash">
  <%= flash[:notice] %>
  <%= flash[:warning] %>
  <%= flash[:message] %>
  </div>
  
  <div id="content">
  <%= @content_for_layout %>
  </div>

  <div id="footer">
  Elaine2, Assembly 2006<br/>
  If you have comments or a critical bug to report, feel free to join the IRC-channel <b style="color:#444;">#elaine</b> @ IRCNet.
  </div>

</div>

</body>
</html>
