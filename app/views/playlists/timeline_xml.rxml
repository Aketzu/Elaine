xml.data() do
  for playlist in @playlists
    xml.event(playlist.formatted_length + ", " + playlist.Program.title,
      :start      => playlist.start_time.strftime("%B %d %Y %H:%M:%S GMT"),
      :end        => playlist.end_time.strftime("%B %d %Y %H:%M:%S GMT"),
      :isDuration => 'true',
      :title      => playlist.start_time.strftime("%H:%M:%S") + ": " + playlist.Program.title)
  end
end
